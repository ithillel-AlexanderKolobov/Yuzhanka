<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
   <session-factory>
   <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
   <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
   <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/yuzhanka</property>
   <property name="hibernate.connection.username">root</property>
   <property name="hibernate.connection.password">root</property>
   <property name="show_sql">true</property>
   <!--  <property name="hbm2ddl.auto">create</property>-->
   
   <mapping class="org.hillel.it.yuzhanka.model.entity.User" />
   <mapping class="org.hillel.it.yuzhanka.model.entity.Payment" />
   <mapping class="org.hillel.it.yuzhanka.model.entity.Reservation" />
   <mapping class="org.hillel.it.yuzhanka.model.entity.Room" />
   <mapping class="org.hillel.it.yuzhanka.model.entity.RoomType" />
   <mapping class="org.hillel.it.yuzhanka.model.entity.Amenity" />


</session-factory>
</hibernate-configuration>